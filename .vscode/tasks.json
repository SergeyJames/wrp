{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build_all",
            "windows": {
                "command": "${workspaceFolder}\run\build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/run/build.sh"
            },
            "args": ["${workspaceFolder}", "Debug" ],
            "options": {
                "cwd": "/bin"
            },
            "group": "build",
            "problemMatcher": []
        },
    ]
}